{
  "name": "bap578-non-fungible-agents",
  "version": "0.1.0",
  "description": "BAP-578 Non-Fungible Agent (NFA) Token Standard Implementation",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:dev": "npx hardhat run scripts/deploy-dev.js",
    "deploy:full": "npx hardhat run scripts/deploy-full.js",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "deploy:full:testnet": "npx hardhat run scripts/deploy-full.js --network testnet",
    "deploy:full:mainnet": "npx hardhat run scripts/deploy-full.js --network mainnet",
    "verify": "npx hardhat run scripts/verify-contracts.js --config hardhat.verify.config.js",
    "verify:testnet": "npx hardhat run scripts/verify-contracts.js --network testnet --config hardhat.verify.config.js",
    "verify:mainnet": "npx hardhat run scripts/verify-contracts.js --network mainnet --config hardhat.verify.config.js",
    "interact": "npx hardhat run scripts/interact.js",
    "interact:testnet": "npx hardhat run scripts/interact.js --network testnet",
    "interact:mainnet": "npx hardhat run scripts/interact.js --network mainnet",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'"
  },
  "keywords": [
    "blockchain",
    "nft",
    "agent",
    "bnb-chain",
    "smart-contract",
    "token-standard"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "chai": "^4.3.7",
    "dotenv": "^16.5.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.24.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^2.0.0",
    "solhint": "^5.1.0",
    "solidity-coverage": "^0.8.13"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "merkletreejs": "^0.5.2"
  }
}
